<%= form_tag('/movies', method: "get") do %>
  <div>
    <%= label_tag :title %><br>
    <%= text_field_tag :title, params[:title] %>
  </div>
  <div>
    <%= label_tag :director %><br>
    <%= text_field_tag :director %>
  </div>
  <div>
    <%= label_tag :runtime_in_minutes %><br>
    <%= number_field_tag :runtime_in_minutes %>
  </div>
  <div>
    <%= submit_tag "Search", name: 'search'%>
  </div>
<% end %>

