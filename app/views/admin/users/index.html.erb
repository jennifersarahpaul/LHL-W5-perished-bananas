<h1>Mango Members</h1>

<hr>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Date Joined</th>
    <th>Admin?</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= formatted_date(user.created_at) %></td>
      <td><%= user.admin %></td>
    </tr>
  <% end %>
</table>

<hr>